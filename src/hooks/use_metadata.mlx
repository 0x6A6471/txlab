let _ =
  [%mel.raw {|
  window.setDocumentTitle = function(title) {
    document.title = title;
  }
|}]
;;
external set_document_title : string -> unit = "setDocumentTitle"

let use_document_title title =
  React.useEffect1
    (fun () ->
      set_document_title title;
      None)
    [| title |]
;;
